@model MVCToto.Models.Toto.TotoTippSor

@{
    ViewBag.Title = "Filter";
}

<h2>Szűrés</h2>

@using(Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Oszlopok száma (@Model.TippSor.Count)</h4>
        <hr />
        @Html.ValidationSummary( true, "Ez egy üzenet", new { @class = "text-danger" } )


        <table class="demo">
            <tr>
                <th>Sor</th>
                <th>T1</th>
                <th>T2</th>
                <th>T3</th>
                <th>T4</th>
                <th>T5</th>
                <th>T6</th>
                <th>T7</th>
                <th>T8</th>
                <th>T9</th>
                <th>T10</th>
                <th>T11</th>
                <th>T12</th>
                <th>T13</th>
                <th>T14</th>
            </tr>

            @for(int i = ViewBag.Pagination.GetStart()-1; i < ViewBag.Pagination.GetEnd(); i++) {
                <tr>
                    <td>
                        @(i + 1).
                    </td>

                    @for(int j = 1; j <= Model.TippSor[i].Oszlop.Length - 1; j++) {
                        <td>
                            @Model.TippSor[i].Oszlop[j].Display()
                        </td>
                    }
                </tr>
            }
        </table>

        @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Generálás" class="btn btn-default" />
                </div>
            </div>*@
    </div>
}

<div>
    <hr />
    @Html.ActionLink( "Első", "First" )
    @Html.ActionLink( "Előző", "Prev" )
    @Html.ActionLink( "Köv", "Next" )
    @Html.ActionLink( "Utolsó", "Last" )
    <hr />
    @Html.ActionLink( "Vissza az alaptipphez", "Generate" )
</div>

