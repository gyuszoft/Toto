@model MVCToto.Models.Toto.Interface.ITotoAlaptipp

@{
    ViewBag.Title = "Generate";
}

<h2>Alaptipp</h2>

@using(Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary( true, "", new { @class = "text-danger" } )

        @*@if(ViewBag.ErrorMessage != null) {
                <h2 class="text-danger">Error.</h2>
                <h3 class="text-danger">ViewBag.ErrorMessage</h3>
            }*@

        @if(ViewBag.Error != null) {
            <h2 class="text-danger">Hiba!</h2>
            <h3 class="text-danger">@ViewBag.Error</h3>
        }

        <table>
            <tr>
                <th>Sor</th>
                <th>tipp1</th>
                <th>tipp2</th>
                <th>tipp3</th>
            </tr>
            @for(int i = 1; i < Model.AlapTipp.Length; i++) {
                <tr>
                    <td>
                        @i.
                    </td>
                    <td>
                        @Html.DropDownListFor( model => model.AlapTipp[i].Tipp1.Tipp,
                            new List<SelectListItem> {
                                new SelectListItem{Text=" ", Value="0"   ,  Selected = Model.AlapTipp[i].Tipp1.Tipp == MVCToto.Models.Toto.Basetipp.EMPTY},
                                new SelectListItem{Text="1", Value="1"   ,  Selected = Model.AlapTipp[i].Tipp1.Tipp == MVCToto.Models.Toto.Basetipp._1},
                                new SelectListItem{Text="2", Value="2"   ,  Selected = Model.AlapTipp[i].Tipp1.Tipp == MVCToto.Models.Toto.Basetipp._2},
                                new SelectListItem{Text="X", Value="3"   ,  Selected = Model.AlapTipp[i].Tipp1.Tipp == MVCToto.Models.Toto.Basetipp.X},
                            } )
                    </td>
                    <td>
                        @Html.DropDownListFor( model => model.AlapTipp[i].Tipp2.Tipp,
                            new List<SelectListItem> {
                                new SelectListItem{Text=" ", Value="0"   ,  Selected = Model.AlapTipp[i].Tipp2.Tipp == MVCToto.Models.Toto.Basetipp.EMPTY},
                                new SelectListItem{Text="1", Value="1"   ,  Selected = Model.AlapTipp[i].Tipp2.Tipp == MVCToto.Models.Toto.Basetipp._1},
                                new SelectListItem{Text="2", Value="2"   ,  Selected = Model.AlapTipp[i].Tipp2.Tipp == MVCToto.Models.Toto.Basetipp._2},
                                new SelectListItem{Text="X", Value="3"   ,  Selected = Model.AlapTipp[i].Tipp2.Tipp == MVCToto.Models.Toto.Basetipp.X},
                            } )
                    </td>
                    <td>
                        @Html.DropDownListFor( model => model.AlapTipp[i].Tipp3.Tipp,
                            new List<SelectListItem> {
                                new SelectListItem{Text=" ", Value="0"   ,  Selected = Model.AlapTipp[i].Tipp3.Tipp == MVCToto.Models.Toto.Basetipp.EMPTY},
                                new SelectListItem{Text="1", Value="1"   ,  Selected = Model.AlapTipp[i].Tipp3.Tipp == MVCToto.Models.Toto.Basetipp._1},
                                new SelectListItem{Text="2", Value="2"   ,  Selected = Model.AlapTipp[i].Tipp3.Tipp == MVCToto.Models.Toto.Basetipp._2},
                                new SelectListItem{Text="X", Value="3"   ,  Selected = Model.AlapTipp[i].Tipp3.Tipp == MVCToto.Models.Toto.Basetipp.X},
                            } )
                    </td>
                </tr>
            }
        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Generálás" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink( "Back to List", "Index" )
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $(".editor-label").remove()
        });
    </script>
}
